{
    "title": "码良的笔记本",
    "author": "Anani",
    "description": "码良的笔记本，记录学习中的点点滴滴。",
    "language": "zh-hans",
    "direction": "ltr",
    "gitbook": ">= 3.2.3",
    "root": ".",
    "links": {
        "sidebar": {
            "博客": "https://anani1994.github.io/blog/#/"
        }
    },
    "styles": {
        "website": "./src/styles/website.css"
    },
    "plugins": [
        "custom-favicon",
        "chapter-fold",
        "splitter",
        "-sharing",
        "sharing-plus",
        "back-to-top-button",
        "code",
        "-highlight",
        "prism",
        "github",
        "edit-link",
        "page-copyright",
        "anchor-navigation-ex",
        "terminal",
        "flexible-alerts"
    ],
    "pluginsConfig": {
        "favicon": "./src/images/favicon.ico",
        "sharing": {
            "all": [
                "facebook",
                "twitter",
                "douban",
                "qq",
                "weibo",
                "qzone",
                "google",
                "instapaper"
            ]
        },
        "github": {
            "url": "https://github.com/Anani1994/market"
        },
        "edit-link": {
            "base": "https://github.com/Anani1994/notebook/edit/master/",
            "label": "Edit This Page"
        },
        "page-copyright": {
            "signature": "Anani",
            "description": "modified at",
            "wisdom": "More than a coder, more than a designer.",
            "format": "yyyy-MM-dd hh:mm:ss",
            "copyright": "Copyright &#169; Anani",
            "timeColor": "#666",
            "copyrightColor": "#666",
            "utcOffset": "8",
            "isShowQRCode": false,
            "baseUri": "https://anani1994.github.io/notebook/",
            "isShowIssues": true,
            "repo": "notebook",
            "token": null,
            "style": "normal",
            "noPowered": true
        },
        "anchor-navigation-ex": {
            "showLevel": false,
            "associatedWithSummary": true,
            "printLog": false,
            "multipleH1": true,
            "mode": "float",
            "float": {
                "floatIcon": "fa fa-navicon",
                "showLevelIcon": false,
                "level1Icon": "fa fa-hand-o-right",
                "level2Icon": "fa fa-hand-o-right",
                "level3Icon": "fa fa-hand-o-right"
            },
            "showGoTop": false,
            "pageTop": {
                "showLevelIcon": false,
                "level1Icon": "fa fa-hand-o-right",
                "level2Icon": "fa fa-hand-o-right",
                "level3Icon": "fa fa-hand-o-right"
            }
        },
        "theme-default": {
            "showLevel": false
        },
        "code": {
            "copyButtons": false
        },
        "terminal": {
            "copyButtons": false,
            "fade": false,
            "style": "flat"
        },
        "flexible-alerts": {
            "style": "callout",
            "note": {
                "label": "注意"
            },
            "tip": {
                "label": "提示"
            },
            "warning": {
                "label": "警告"
            },
            "danger": {
                "label": "禁止"
            },
            "error": {
                "label": "错误",
                "icon": "fa fa-close",
                "className": "error"
            },
            "define": {
                "label": "Official description",
                "icon": "fa fa-book",
                "className": "define"
            }
        }
    }
}